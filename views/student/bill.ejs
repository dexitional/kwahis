
            <div class="page-inner">
			<%- include('../student/breadcrump.ejs'); %>
				
                <div id="main-wrapper">
                    <div class="row">
                           <!-- # Fees Records -->												
                                                
							 <div class="col-md-12">															 
									 <div class="panel panel-white">
												<div class="panel-body">
												   <div class="table-responsive">
													 <table id="st_bill_table" class="display table dataTable" cellspacing="0" width="100%" role="grid" aria-describedby="example_info" style="width: 100%;">
														<thead>
															<tr><th rowspan="1" colspan="1">TITLE OF BILL</th><th rowspan="1" colspan="1">AMOUNT DUE (GHC)</th><th rowspan="1" colspan="1">ACADEMIC YEAR</th><th rowspan="1" colspan="1">&nbsp;</th></tr>
														</thead>
														<tbody>
															<%  if(rows.length > 0){
															      rows.map(row =>{
															%>
															    <tr role="row" class="odd">
																		<td class="sorting_1"><b><%= row.bname.toUpperCase() %></b></td>
																		<td><b>GHC <%= row.bamount %></b></td>
																		<td><%= row.academs+' -TERM '+row.term %></td>
																		<td><button type="button" class="btn btn-default btn-addon m-b-0" data-toggle="modal" data-target=".bill<%= row.id+row.academ %>"><i class="fa fa-plus"></i> VIEW BILL</button>
																			<div class="modal fade bill<%= row.id+row.academ %>" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
																						<div class="modal-dialog modal-lg">
																							<div class="modal-content">
																								<div class="modal-header">
																									<button type="button" class="close hidden-print" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
																									<h4 class="modal-title hidden-print" id="myModalLabel">Generated Bill</h4>
																								</div>
																								<div class="modal-body" id="bill<%= row.id+row.academ %>">
																										  <div>
																												 <table style="width:100%;margin:-5px;padding:5px;border:2px dashed green;">
																													  <tr>
																														   <td colspan="3" align="center">
																															  <h1><%= row.bname.toUpperCase() %></h1>
																															</td>																																						   
																													  </tr>
																													   <tr>
																														   <td colspan="3" align="center"><h2>STUDENT BILL</h2><em><strong><%= row.bname %></strong></em></td>																																						   
																													  </tr>																													  
																													  <tr>
																														   <td colspan="3" align="center">
																															     <table style="width:90%;margin:5px auto;">
																																       <thead>
																																	       <tr>  
																																			   <th>ITEM DESCRIPTION</th>
																																			   <th>AMOUNT (GHC)</th>																																			 
																																	       </tr>
																																	  </thead>
																																	   <tbody>							       
																																		  <%  if(row.content != null || row.content.trim() != ''){
																																		      var items = row.content.split(';'); 
																																		      items.map(item => {
																																				  var sitem = item.split(':');																																				  																																			 
																																		  %>
																																		    <tr>
																																		     <% for(var vals of sitem){  %>
																																		        <td><%- vals.toUpperCase(); %></td>
																																		     <% }%>
																																		   </tr>
																																		<% }) } %>																													
																																																																	
																																			<hr>
																																			<tr>
																																				<th>TOTAL</td>
																																				<th><%- row.bamount %></td>
																																			</tr>			
																																				
																																	   </tbody>
																																	   
																																 </table>																															   
																														    </td>
																													  </tr>																													  
																												 </table>
																										  </div>
																								</div>
																								<div class="modal-footer hidden-print">
																									<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
																									<a target="_blank" href="/bill/view/<%= row.bid %>" class="btn btn-success" onclick="if(!confirm('Do you want to Print Bill?')) return false;"><i class="fa fa-print"></i> Print</a>
																								</div>
																							</div>
																						</div>
																					</div>
																		</td>																		
																	</tr>
																	<%
																	      })
																	   }else{
																	%>
																	<tr><td colspan="4" style="text-align:center;" class="sorting_1"><em>Sorry, No Student Bill posted!</em></td></tr>
															        <% } %>
															</tbody>
													   </table>  
													</div>
												</div>
											</div>
							 </div>        

                    </div><!-- Row -->
                </div><!-- Main Wrapper -->
			